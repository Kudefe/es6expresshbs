<form class="ui form" action="/admin/edit/{{games._id}}" method="POST">
  <div class="field">
    <label>Title</label>
    <input type="text" name="title" placeholder="title" value="{{games.title}}">
  </div>
  <div class="field">
    <label>Author</label>
    <input type="text" name="author" placeholder="author" value="{{games.author}}">
  </div>
  <div class="field">
    <label>Text</label>
    <textarea name="body" rows="8" cols="80" >{{games.body}}</textarea>
  </div>
  <br>
  <input class="ui button" type="submit" value="Submit">
</form>
